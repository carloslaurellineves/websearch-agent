# Configurações do SharePoint
# URL base do SharePoint (ex: https://seu-tenant.sharepoint.com)
SHAREPOINT_URL=https://seu-tenant.sharepoint.com

# Caminho do site do SharePoint (ex: /sites/NomeDoSite)
SHAREPOINT_SITE=/sites/NomeDoSite

# Nome da biblioteca de documentos (ex: Documentos%20Compartilhados)
# Nota: Use %20 para espaços na URL
SHAREPOINT_LIBRARY=Documentos%20Compartilhados

# Nome do arquivo Excel no SharePoint
SHAREPOINT_FILE=softwares_homologados.xlsx

# Credenciais do SharePoint
SHAREPOINT_USERNAME=usuario@dominio.com
SHAREPOINT_PASSWORD=sua_senha

# Configurações do Gateway LLM (compatível com OpenAI)
# URL base do gateway corporativo
LLM_BASE_URL=https://gateway-corporativo.com/v1

# Token de API do gateway LLM
LLM_API_KEY=seu_token_aqui

# Modelo LLM a ser usado (ex: gpt-4o-mini, gpt-4, etc.)
LLM_MODEL=gpt-4o-mini

# Configurações de Arquivos
# Nome do arquivo de saída
OUTPUT_FILE=resultados_licenciamento.xlsx

# Diretório de saída (relativo ao diretório do projeto)
OUTPUT_DIR=./output

# Configurações Gerais
# Número máximo de tentativas em caso de erro
MAX_RETRIES=3

# Timeout de requisições em segundos
REQUEST_TIMEOUT=30

# Limiar mínimo de confiança (0-100)
CONFIDENCE_THRESHOLD=70